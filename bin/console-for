#!/usr/bin/env ruby
require File.dirname(__FILE__) + "/../lib/geordi"
include Geordi

catching_errors do
  retrieve_data!

  if File.exists? "#{root}/script/console" # => Rails 2
    system "shell-for #{stage} --no-bash script/console #{env}"
  else
    system "shell-for #{stage} --no-bash bundle exec rails console #{env}"
  end
end
